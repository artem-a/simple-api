{{! header content }}

<div class="container">
  <div class="navbar-header">
    {{#bs-navbar-toggle}}
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    {{/bs-navbar-toggle}}
    {{link-to "Simple API" "home" class="navbar-brand"}}
  </div>

  {{#bs-navbar-content}}
    {{#if session.isAuthenticated}}
      {{#bs-navbar-nav}}
        {{#bs-nav-item}}{{link-to "Posts" "dashboard.posts"}}{{/bs-nav-item}}
      {{/bs-navbar-nav}}

      {{#bs-navbar-nav class="navbar-right"}}
        {{#bs-nav-item}}<a href="#" {{action "invalidateSession"}}>Log out</a>{{/bs-nav-item}}
      {{/bs-navbar-nav}}
    {{else}}
      {{#bs-navbar-nav class="navbar-right"}}
        {{#bs-nav-item}}{{link-to "Sign In" "sign-in"}}{{/bs-nav-item}}
        {{#bs-nav-item}}{{link-to "Sign Up" "sign-up"}}{{/bs-nav-item}}
      {{/bs-navbar-nav}}
    {{/if}}
  {{/bs-navbar-content}}
</div>
